// header styles
#header
    background-color #113
    color #fff
    padding 15px 0 15px 15px
    width 100%
    box-sizing: border-box
    position fixed
    z-index 3

    display flex
    justify-content: flex-start
    gap 15px

    h1
        font-size 18pt
        line-height: 45px

#header-logo
    width: 45px
    height 45px
    // color #000
    color cd-light-blue
    svg
        width inherit
        height inherit


@media desktopscreen
    #header-logo
        width: 60px
        height 60px


    #header
        padding 20px
        gap 20px

        h1
            font-size 25pt
            line-height: 60px
